<% if (page.total > 1) { %>
  <nav class="pagination">
    <% if (page.prev) { %>
      <a href="<%- url_for(page.prev_path) %>" class="prev">← 上一页</a>
    <% } else { %>
      <span class="prev disabled">← 上一页</span>
    <% } %>

    <span class="page-number">第 <%= page.current %> / <%= page.total %> 页</span>

    <% if (page.next) { %>
      <a href="<%- url_for(page.next_path) %>" class="next">下一页 →</a>
    <% } else { %>
      <span class="next disabled">下一页 →</span>
    <% } %>
  </nav>
<% } %>
